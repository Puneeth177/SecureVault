# Environment Configuration Example
# Copy this file to .env and fill in your actual values

# Database Configuration
# For local development:
MONGODB_URI=mongodb://localhost:27017/SecureVault

# For MongoDB Atlas (production):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/securevault

# Security Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here
ENCRYPTION_KEY=your-32-character-encryption-key
ADMIN_PASSWORD=your-secure-admin-password

# Server Configuration
PORT=3000
NODE_ENV=development

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_TIMEOUT_HOURS=24

# Security Headers
# For local development:
CORS_ORIGIN=http://localhost:3000

# For production (replace with your actual Render URL):
# CORS_ORIGIN=https://your-app-name.onrender.com

# Render-specific (automatically set by Render):
# RENDER_EXTERNAL_URL=https://your-app-name.onrender.com